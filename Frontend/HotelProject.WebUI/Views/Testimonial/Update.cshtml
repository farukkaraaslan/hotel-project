@model TestimonialViewModel
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form method="post">
   
    <input type="hidden" asp-for="Id" />
   <div class="form-group">
        <label>Ad</label>
        <input type="text" class="form-control input-default" asp-for="Name">
    </div>
    <div class="form-group">
         <label>Başlık</label>
        <input type="text" class="form-control input-default" asp-for="Title">
    </div> 
    <div class="form-group">
         <label>Açıklama</label>
        <input type="text" class="form-control input-default" asp-for="Desription">
    </div>
     <div class="form-group">
         <label>Resim</label>
        <input type="text" class="form-control input-default" asp-for="Image">
    </div>

   <button class="btn btn-primary">Kaydet</button>
</form>

