
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

@await Component.InvokeAsync("_HeadPartial")

<body>
    <div class="container-xxl bg-white p-0">
        <!-- Spinner Start -->
        <div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
            <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
        <!-- Spinner End -->
        @await Component.InvokeAsync("_HeaderPartial")
        <!-- Carousel Start -->
      @await Component.InvokeAsync("_SliderPartial")
        <!-- Carousel End -->

        <!-- About Start -->
        @await Component.InvokeAsync("_AboutusPartial")
        <!-- About End -->


        <!-- Room Start -->
         @await Component.InvokeAsync("_RoomsPartial")
        <!-- Room End -->

        <!-- Service Start -->
        @await Component.InvokeAsync("_ServicesPartial")
        <!-- Service End -->


        <!-- Testimonial Start -->
         @await Component.InvokeAsync("_TestimonialsPartial")
        <!-- Testimonial End -->


        <!-- Team Start -->
         @await Component.InvokeAsync("_StaffPartial")
        <!-- Team End -->


        <!-- Newsletter Start -->
    @await Html.PartialAsync("_SubscribePartial")
        <!-- Newsletter Start -->
        

        <!-- Footer Start -->
         @await Component.InvokeAsync("_FooterPartial")
        <!-- Footer End -->


        <!-- Back to Top -->
        <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
    </div>

     @await Component.InvokeAsync("_ScriptsPartial")
</body>

</html>
