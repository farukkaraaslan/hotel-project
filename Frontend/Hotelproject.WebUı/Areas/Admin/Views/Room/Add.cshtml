@model AddRoomModel
@{
    ViewData["Title"] = "Add";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<form method="post" enctype="multipart/form-data" asp-action="Add" asp-controller="Room">
    <div class="form-group">
         <label>Başlık</label>
        <input type="text" class="form-control input-default" asp-for="Title">
        <span asp-validation-for="Title" class="text-danger"></span>
    </div> 
  
    <div class="form-group">
         <label>Oda Numarası</label>
        <input type="text" class="form-control input-default" asp-for="Number">
         <span asp-validation-for="Number" class="text-danger"></span>
    </div> 
    <div class="form-group">
         <label>Ücret</label>
        <input type="text" class="form-control input-default" asp-for="Price">
         <span asp-validation-for="Price" class="text-danger"></span>
    </div>
     <div class="form-group">
         <label>Yatak sayısı</label>
        <input type="text" class="form-control input-default" asp-for="BedCount">
        <span asp-validation-for="BedCount" class="text-danger"></span>
    </div>
     <div class="form-group">
         <label>Banyo Sayısı</label>
        <input type="text" class="form-control input-default" asp-for="BathCount">
         <span asp-validation-for="BathCount" class="text-danger"></span>
    </div>
    <div class="form-group">
         <label>Wifi Durumu</label>
        <input type="text" class="form-control input-default" asp-for="Wifi">
         <span asp-validation-for="Wifi" class="text-danger"></span>
    </div>
    <div class="form-group">
         <label>Açıklama</label>
        <input type="text" class="form-control input-default" asp-for="Description">
         <span asp-validation-for="Description" class="text-danger"></span>
    </div>
     <div class="form-group">
        <img id="previewImage" src="#" class="img-thumbnail" width="200">
    </div>
   <div class="input-group mb-3">
        <div class="input-group mb-3">
            <div class="input-group-prepend"><span class="input-group-text">Upload</span>
            </div>
            <div class="custom-file">
                <input type="file" name="ImageFile" id="coverImage" class="custom-file-input">
                <label class="custom-file-label">Choose file</label>
            </div>
        </div>
        <span asp-validation-for="ImageFile" class="text-danger"></span>
    </div>

   <button class="btn btn-primary">Kaydet</button>
</form>

<script>
    document.getElementById('coverImage').addEventListener('change', function (event) {
        var input = event.target;
        var previewImage = document.getElementById("previewImage");

        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                previewImage.setAttribute('src', e.target.result);
            }

            reader.readAsDataURL(input.files[0]);
        }
    });
</script>