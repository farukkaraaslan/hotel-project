@model AddStaffViewModel
@{
    ViewData["Title"] = "Add";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<form method="post" enctype="multipart/form-data">
   
    <div class="form-group">
        <label>Personel Adı</label>
        <input type="text" class="form-control input-default" asp-for="Name">
          <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
         <label>Personel Ünvan</label>
        <input type="text" class="form-control input-default" asp-for="Title">
          <span asp-validation-for="Title" class="text-danger"></span>
    </div> 
    <div class="form-group">
         <label>Sosyal Medya 1</label>
        <input type="text" class="form-control input-default" asp-for="SocialMedia1">
          <span asp-validation-for="SocialMedia1" class="text-danger"></span>
    </div>
     <div class="form-group">
         <label>Sosyal Medya 2</label>
        <input type="text" class="form-control input-default" asp-for="SocialMedia2">
          <span asp-validation-for="SocialMedia2" class="text-danger"></span>
    </div>
     <div class="form-group">
         <label>Sosyal Medya 3</label>
        <input type="text" class="form-control input-default" asp-for="SocialMedia3">
          <span asp-validation-for="SocialMedia3" class="text-danger"></span>
    </div>
     <div class="form-group">
        <img id="previewImage" src="#" class="img-thumbnail" width="200">
    </div>
     <div class="input-group mb-3">
        <div class="input-group mb-3">
            <div class="input-group-prepend"><span class="input-group-text">Upload</span>
            </div>
            <div class="custom-file">
                <input type="file" name="ImageFile" id="coverImage" class="custom-file-input">
                <label class="custom-file-label">Choose file</label>
            </div>
        </div>
        <span asp-validation-for="ImageFile" class="text-danger"></span>
    </div>
   <button class="btn btn-primary">Kaydet</button>
</form>

<script>
    document.getElementById('coverImage').addEventListener('change', function (event) {
        var input = event.target;
        var previewImage = document.getElementById("previewImage");

        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                previewImage.setAttribute('src', e.target.result);
            }

            reader.readAsDataURL(input.files[0]);
        }
    });
</script>
